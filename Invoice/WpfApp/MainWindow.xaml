<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Invoice Management" Height="500" Width="950">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Fila para los botones -->
            <RowDefinition Height="*"/>
            <!-- Fila para el DataGrid -->
        </Grid.RowDefinitions>

        <!-- 🔹 Fila superior: Botones -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <Button Content="Load Invoices"
                    Width="150" Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="LoadExpenses_Click"
                    Margin="0,0,10,0"/>

            <Button Content="Add Expense"
                    Width="150" Height="35"
                    Background="#28A745"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="AddExpense_Click"/>
        </StackPanel>

        <!-- 🔹 DataGrid principal -->
        <DataGrid x:Name="dgInvoices"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  FontSize="14"
                  RowHeight="35"
                  AlternatingRowBackground="#F5F5F5"
                  GridLinesVisibility="Horizontal"
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  IsReadOnly="False">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdInvoice}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="100"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Expense Date" Binding="{Binding ExpenseDate}" Width="130"/>
                <DataGridTextColumn Header="Last Payment" Binding="{Binding LastPaymentDate}" Width="130"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>

                <!-- 🔹 Botones de acción -->
                <DataGridTemplateColumn Header="Actions" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button x:Name="btnEdit" Content="Edit"
                                        Background="#4CAF50" Foreground="White"
                                        Padding="6,2" Margin="5,0"
                                        Click="EditInvoice_Click"/>
                                <Button x:Name="btnDelete" Content="Delete"
                                        Background="#E53935" Foreground="White"
                                        Padding="6,2" Margin="5,0"
                                        Click="DeleteInvoice_Click"/>
                                <Button x:Name="btnUpdate" Content="Update"
                                        Background="#007ACC" Foreground="White"
                                        Padding="6,2" Margin="5,0"
                                        Click="UpdateInvoice_Click"
                                        Visibility="Collapsed"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
