<Window x:Class="WpfApp.AddExpenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Expense" Height="400" Width="450" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Description:"/>
            <TextBox x:Name="txtDescription" Margin="0,5,0,10"/>

            <TextBlock Text="Amount:"/>
            <TextBox x:Name="txtAmount" Margin="0,5,0,10"/>

            <TextBlock Text="Category:"/>
            <ComboBox x:Name="cbCategory" Margin="0,5,0,10">
                <ComboBoxItem Content="Education"/>
                <ComboBoxItem Content="Health"/>
                <ComboBoxItem Content="Fun"/>
                <ComboBoxItem Content="Monthly Expenses"/>
                <ComboBoxItem Content="Other"/>
            </ComboBox>

            <TextBlock Text="Expense Date:"/>
            <DatePicker x:Name="dpExpenseDate" Margin="0,5,0,10"/>

            <TextBlock Text="Last Payment Date:"/>
            <DatePicker x:Name="dpLastPaymentDate" Margin="0,5,0,10"/>

            <TextBlock Text="Destination:"/>
            <TextBox x:Name="txtDestination" Margin="0,5,0,10"/>

            <TextBlock Text="Status:"/>
            <ComboBox x:Name="cbStatus" Margin="0,5,0,10">
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Paid"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="100" Margin="0,0,10,0" Background="#007ACC" Foreground="White" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
